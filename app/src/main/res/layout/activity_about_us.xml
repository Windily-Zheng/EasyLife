<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xc_voyager.easylife.AboutUs">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/abtus_img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
             />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="EasyLife "
            android:layout_marginTop="16dp"
            android:layout_below="@id/abtus_img1"
            android:textColor="@color/text_color"
            android:id="@+id/abtus_t1"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/abtus_t2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/abtus_t1"
            android:text="With easylife, easy your life."
            android:textAlignment="center"
            android:textColor="@color/text_color"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/abtus_t3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/abtus_t4"
            android:layout_alignParentStart="true"
            android:text="版本号 v1.0.0"
            android:textAlignment="center"
            android:textColor="@color/text_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/abtus_t4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="By Chang X, Zhiyi Z and Junxiong L"
            android:textAlignment="center"
            android:textColor="@color/text_color"
            android:textSize="16sp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
