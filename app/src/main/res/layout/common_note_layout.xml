<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"


    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"

        >

        <ImageView
            android:id="@+id/common_note_image1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            />

        <TextView
            android:id="@+id/common_note_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_above="@+id/common_note_text2"
            android:layout_toEndOf="@+id/common_note_image1"

            android:text="aaaaaaaaaaa"
            android:textAlignment="viewStart"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/common_note_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_below="@+id/common_note_image1"

            android:text="bbbbbbbb"
            android:textAlignment="viewStart"
            android:textColor="#000"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/common_note_image2"
            android:layout_width="18dp"
            android:layout_height="18dp"

            android:layout_alignParentLeft="true"
            android:layout_below="@id/common_note_text2"
            />

        <TextView
            android:id="@+id/common_note_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignBottom="@id/common_note_image2"
            android:layout_below="@id/common_note_text2"
            android:layout_toEndOf="@id/common_note_image2"

            android:text="ccccccc"
            android:textAlignment="viewStart"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />

    </RelativeLayout>
</LinearLayout>
