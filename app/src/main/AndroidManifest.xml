<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.xc_voyager.easylife">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/navigator_flat_128px"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/navigator_flat_128px"
        android:supportsRtl="true">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Note" />
        <activity
            android:name=".ScheduleActivity"
            android:label="@string/title_activity_schedule" />
            <!--android:theme="@style/AppTheme" />-->
        <provider android:name="TaskListProvider"
            android:authorities="com.amaker.provider.TaskList" />
        <activity android:name="TaskDetailActivity"
            android:label="@string/title_activity_schedule" >
            <intent-filter>
                <action android:name="android.intent.action.NEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <receiver android:name="TaskReceiver">
            <intent-filter>
                <action android:name="com.amaker.ch17.TaskReceiver"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>
        <activity android:name="AlarmActivity">
            <intent-filter>
                <action android:name="com.amaker.ch17.AlarmAction"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".AboutUs"></activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>